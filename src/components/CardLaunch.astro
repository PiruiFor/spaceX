---
interface Props {
    id: string
    details: string | null
    img: string
    success: boolean
    flightNumber: number
}
const {success, flightNumber, id, details, img} = Astro.props
---

<div class="flex justify-center" >
    <a 
        href={`/${id}`}
        class="rounded-lg border shadow-md bg-gray-800 border-gray-700 hover:scale-105 hover:bg-gray-700 hover:border-gray-500
        transition flex flex-col"
        style="width: 550px"
    >
        <picture class="flex justify-center p-4">
            <img src={img} alt={`Lanzamiento ${id}`} class="mb-5 rounded-lg">
        </picture>
    
        <header class="p-4 flex-grow">
            <span class={`text-xs font-semibold mr-2 px-2.5 py-0.5 rounded ${
                success ? "bg-green-200 text-green-900" : "bg-red-200 text-red-900"
            }`}>
                Estado: {success ? "Exito" : "Fracaso"}
            </span>
    
            <h2 class="my-2 text-2xl font-bold tracking-tight text-white">
                Vuelo #{flightNumber}
            </h2>
                
            <p class="mb-4 font-light text-gray-400">
                {details != null && details?.length > 100 ? details.slice(0,100) + " ... " : details}
            </p>
        </header>
    </a>
</div>